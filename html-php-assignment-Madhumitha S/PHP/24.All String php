<?php
// Original string
$text = " Hello World! PHP String Functions Example ";

// 1. Trim whitespace
echo "Trim: '" . trim($text) . "'\n";

// 2. String length
echo "Length: " . strlen($text) . "\n";

// 3. Word count
echo "Word count: " . str_word_count($text) . "\n";

// 4. Reverse string
echo "Reverse: " . strrev($text) . "\n";

// 5. Find position of "World"
echo "Position of 'World': " . strpos($text, "World") . "\n";

// 6. Replace text
echo "Replace 'World' with 'Universe': " . str_replace("World", "Universe", $text) . "\n";

// 7. Lowercase
echo "Lowercase: " . strtolower($text) . "\n";

// 8. Uppercase
echo "Uppercase: " . strtoupper($text) . "\n";

// 9. First letter uppercase
echo "Ucfirst: " . ucfirst(trim($text)) . "\n";

// 10. String repeat
echo "Repeat: " . str_repeat("PHP ", 3) . "\n";

// 11. Substring
echo "Substring (0-5): " . substr($text, 0, 5) . "\n";

// 12. String comparison
echo "Compare 'Hello' and 'World': " . strcmp("Hello", "World") . "\n";
?>


OUTPUT:


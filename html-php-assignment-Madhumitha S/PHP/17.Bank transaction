<?php
// Bank Transaction Simulation

$balance = 1000; // starting balance
$running = true;

while ($running) {
    echo "\n--- Bank Menu ---\n";
    echo "1. Deposit Money\n";
    echo "2. Withdraw Money\n";
    echo "3. Check Balance\n";
    echo "4. Exit\n";
    echo "Enter your choice (1-4): ";

    $choice = trim(fgets(STDIN)); // read user input

    switch ($choice) {
        case 1:
            echo "Enter amount to deposit: ";
            $amount = trim(fgets(STDIN));
            if ($amount > 0) {
                $balance += $amount;
                echo "Deposited: $amount\n";
            } else {
                echo "Invalid deposit amount.\n";
            }
            break;

        case 2:
            echo "Enter amount to withdraw: ";
            $amount = trim(fgets(STDIN));
            if ($amount > 0 && $amount <= $balance) {
                $balance -= $amount;
                echo "Withdrawn: $amount\n";
            } elseif ($amount > $balance) {
                echo "Insufficient balance.\n";
            } else {
                echo "Invalid withdrawal amount.\n";
            }
            break;

        case 3:
            echo "Current Balance: $balance\n";
            break;

        case 4:
            echo "Thank you for using our bank service.\n";
            $running = false;
            break;

        default:
            echo "Invalid choice. Please try again.\n";
    }
}
?>


OUTPUT:


--- Bank Menu ---
1. Deposit Money
2. Withdraw Money
3. Check Balance
4. Exit
